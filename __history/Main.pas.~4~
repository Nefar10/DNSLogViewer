unit Main;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ComCtrls, Vcl.Menus, Vcl.Buttons;

type
  TForm1 = class(TForm)
    StatusBar1: TStatusBar;
    SpeedButton1: TSpeedButton;
    MainMenu1: TMainMenu;
    N1: TMenuItem;
    N2: TMenuItem;
    N3: TMenuItem;
    N4: TMenuItem;
    N5: TMenuItem;
    procedure OpenFileClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

procedure TForm1.OpenFileClick(Sender: TObject);
var
  openFileDialog: TOpenTextFileDialog;
  fileStream: TStreamReader;
  line: string;
begin
  openFileDialog := TOpenTextFileDialog.Create(nil);
  try
    // Настраиваем диалог для открытия текстовых файлов
    openFileDialog.Options := [ofReadOnly, ofFileMustExist];
    openFileDialog.Filter := 'Текстовые файлы (*.txt)|*.txt';

    // Если пользователь выбирает файл и нажимает кнопку "Открыть"
    if openFileDialog.Execute then
    begin
      // Открываем выбранный файл для чтения
      fileStream := TStreamReader.Create(openFileDialog.FileName);
      try
        // Читаем файл построчно
        while not fileStream.EndOfStream do
        begin
          line := fileStream.ReadLine;

          // Обрабатываем каждую строку
          // Например, выводим ее содержимое на экран
          ShowMessage(line);
        end;
      finally
        // Закрываем файл
        fileStream.Free;
      end;
    end;
  finally
    openFileDialog.Free;
  end;
end;

end.
